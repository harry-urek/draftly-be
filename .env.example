# Backend Environment Variables
# Copy this file to `.env` and replace the placeholder values

################################
# General Server Configuration #
################################
NODE_ENV="development"
HOST="localhost"
PORT=3001
FRONTEND_URL="http://localhost:3000"
JWT_SECRET="your-super-secret-jwt-key-here"

########################
# Database Connections #
########################
DATABASE_URL="mongodb://localhost:27017/draftly"

###############################
# Redis Cache Configuration    #
###############################
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

##########################
# Google OAuth Credentials #
##########################
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="http://localhost:3001/auth/oauth/google/callback"

#######################################
# Firebase Admin Service Account Keys #
#######################################
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_CLIENT_ID=

###############################
# Security & Encryption       #
###############################
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
TOKEN_ENCRYPTION_KEY="REPLACE_WITH_32_BYTE_BASE64_KEY"

###############################
# Optional Integrations       #
###############################
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/slack/webhook"
