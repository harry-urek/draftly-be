{
  "name": "draftly-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "verify:firebase": "tsx scripts/verify-firebase.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "hooks:install": "npx pre-commit install || node scripts/setup-hooks.js",
    "hooks:update": "npx pre-commit autoupdate || node scripts/setup-hooks.js",
    "hooks:setup": "node scripts/setup-hooks.js"
  },
  "keywords": [
    "email",
    "ai",
    "fastify",
    "gmail"
  ],
  "author": "",
  "license": "ISC",
  "description": "Draftly Gmail AI Reply Agent Backend",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/session": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@google-cloud/vertexai": "^1.10.0",
    "@prisma/client": "^6.16.2",
    "@slack/webhook": "^7.0.6",
    "@types/node": "^24.5.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.3.0",
    "googleapis": "^160.0.0",
    "ioredis": "^5.7.0",
    "mongodb": "^6.20.0",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.2",
    "redis": "^5.8.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1"
  }
}
